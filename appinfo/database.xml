<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*discount_cards</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <autoincrement>1</autoincrement>
                <default>0</default>
                <notnull>true</notnull>
                <length>4</length>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>title</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>
            <field>
                <name>description</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>512</length>
            </field>
            <field>
                <name>code</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>
            <field>
                <name>codetype</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>
            <field>
                <name>color</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>
            <field>
                <name>url</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>512</length>
            </field>
            <field>
                <name>added</name>
                <type>integer</type>
                <default></default>
                <notnull>false</notnull>
                <unsigned>true</unsigned>
                <length>4</length>
            </field>
            <field>
                <name>lastmodified</name>
                <type>integer</type>
                <default></default>
                <notnull>false</notnull>
                <unsigned>true</unsigned>
                <length>4</length>
            </field>
            <field>
                <name>clickcount</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <unsigned>true</unsigned>
                <length>4</length>
            </field>
            <field>
                <name>image</name>
                <type>text</type>
                <default></default>
                <notnull>false</notnull>
                <length>400000</length>
            </field>
        </declaration>
    </table>

    <table>
        <name>*dbprefix*discount_cards_tags</name>
        <declaration>
            <field>
                <name>card_id</name>
                <type>integer</type>
                <length>64</length>
            </field>

            <field>
                <name>tag</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>255</length>
            </field>
            <index>
                <name>discount_card_tag</name>
                <unique>true</unique>
                <field>
                    <name>card_id</name>
                    <sorting>ascending</sorting>
                </field>
                <field>
                    <name>tag</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
        </declaration>
    </table>
</database>